<UserControl x:Class="AutoTool.Desktop.Views.Parts.ListPanel"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
xmlns:corecmd="clr-namespace:AutoTool.Core.Commands;assembly=AutoTool.Core"
xmlns:converters="clr-namespace:AutoTool.Desktop.Converters"
mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:IndentConverter x:Key="IndentConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="マクロリスト" FontSize="14" FontWeight="SemiBold" Margin="8,8,8,4"/>

        <Border Grid.Row="1" Margin="8" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8">
            <ScrollViewer>
                <ListView x:Name="CommandList"
                         ItemsSource="{Binding FlatItems}"
                         SelectedItem="{Binding SelectedNode, Mode=TwoWay}"
                         SelectionMode="Single"
                         Background="Transparent"
                         BorderThickness="0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="{Binding IndentLevel, Converter={StaticResource IndentConverter}}">
                                <!-- Command items -->
                                <StackPanel Orientation="Horizontal" Visibility="{Binding IsCommand, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <Ellipse Width="8" Height="8" Fill="#9CA3AF" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                    <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Type}" Foreground="#6B7280" Margin="8,0,0,0"/>
                                    <TextBlock Text=" (無効)" Foreground="#9CA3AF" Visibility="{Binding IsEnabled, Converter={StaticResource InverseBoolToVisibilityConverter}, ConverterParameter=Invert}"/>
                                    <TextBlock Text="{Binding BlockCount, StringFormat='[{0}ブロック]'}" Foreground="#9CA3AF" Margin="6,0,0,0"/>
                                </StackPanel>
                                
                                <!-- Block items -->
                                <StackPanel Orientation="Horizontal" Visibility="{Binding IsBlock, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <TextBlock Text="{Binding Name}" FontStyle="Italic" Foreground="#6B7280"/>
                                    <TextBlock Text="{Binding ChildCount, StringFormat='[{0}子]'}" Foreground="#9CA3AF" Margin="6,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>