<UserControl x:Class="AutoTool.Desktop.Views.Parts.ListPanel"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Commands" FontSize="14" FontWeight="SemiBold" Margin="8,8,8,4"/>

        <Border Grid.Row="1" Margin="8" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8">
            <ScrollViewer>
                <ListView x:Name="CommandList"
                         ItemsSource="{Binding Items}"
                         SelectedItem="{Binding SelectedItem}"
                         SelectedIndex="{Binding SelectedIndex}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="4">
                                <Ellipse Width="8" Height="8" Fill="#9CA3AF" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock Text="{Binding LineNumber}" FontWeight="Bold" Margin="0,0,4,0" MinWidth="25"/>
                                <TextBlock Text="{Binding ItemType}" FontWeight="SemiBold" Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding Comment}" Foreground="#6B7280"/>
                                <TextBlock Text=" (実行中)" Foreground="#10B981" FontWeight="Bold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock Text=" (無効)" Foreground="#9CA3AF">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsEnable}" Value="False">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>