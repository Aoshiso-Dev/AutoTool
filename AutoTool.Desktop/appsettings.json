{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "AutoTool": "Debug",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "yyyy-MM-dd HH:mm:ss "
    }
  },
  "AutoTool": {
    "Application": {
      "Name": "AutoTool.Desktop",
      "Version": "2.0.0",
      "Description": "Advanced Automation Tool with Attribute-based Command System"
    },
    "Commands": {
      "EnableAttributeBasedRegistration": true,
      "ScanAssemblies": [
        "AutoTool.Commands"
      ],
      "DefaultTimeout": 5000,
      "DefaultInterval": 100
    },
    "UI": {
      "Theme": "Default",
      "Language": "ja-JP",
      "AutoSave": true,
      "AutoSaveInterval": 300
    }
  }
}