<Application x:Class="AutoTool.Desktop.App"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <!-- 全体スタイル（軽め） -->
        <ResourceDictionary>
            <SolidColorBrush x:Key="AccentBrush" Color="#4F46E5"/>
            <Style TargetType="Button">
                <Setter Property="Padding" Value="10,6"/>
                <Setter Property="Margin" Value="4"/>
                <Setter Property="Background" Value="#F3F4F6"/>
                <Setter Property="BorderBrush" Value="#E5E7EB"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#EEF2FF"/>
                                    <Setter Property="BorderBrush" Value="#C7D2FE"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#E0E7FF"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="TextBox">
                <Setter Property="Margin" Value="4"/>
                <Setter Property="Padding" Value="6"/>
            </Style>
            <Style TargetType="ComboBox">
                <Setter Property="Margin" Value="4"/>
                <Setter Property="Padding" Value="6"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>