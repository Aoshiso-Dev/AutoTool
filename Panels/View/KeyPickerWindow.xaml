<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="MacroPanels.View.KeyPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="Key Input"
        WindowStartupLocation="CenterScreen"
        Width="300" Height="150"
        ResizeMode="NoResize"
        Topmost="True"
        KeyDown="Window_KeyDown">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Press a key" 
                   FontSize="14" HorizontalAlignment="Center" Margin="0,0,0,10"/>
        
        <Border Grid.Row="1" Background="{ui:ThemeResource ControlFillColorDefaultBrush}"
                CornerRadius="8" Padding="16">
            <TextBlock x:Name="KeyDisplayText" Text="(Waiting...)" 
                       FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
        </Border>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <ui:Button Content="Cancel" Click="Cancel_Click" Margin="0,0,8,0"/>
            <ui:Button x:Name="OkButton" Content="OK" Appearance="Primary" Click="Ok_Click" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
