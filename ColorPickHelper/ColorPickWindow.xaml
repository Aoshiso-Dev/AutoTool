<Window x:Class="ColorPickHelper.ColorPickWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Color Picker" Height="100" Width="100"
        WindowStyle="None" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" Background="Transparent"
        >
    <Grid>
        <!-- 色のプレビューと情報 -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Rectangle Name="ColorPreview" Width="100" Height="100" Margin="10"/>
            <TextBlock Name="ColorInfo" FontSize="16" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
