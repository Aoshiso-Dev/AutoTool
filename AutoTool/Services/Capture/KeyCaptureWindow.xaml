<Window x:Class="AutoTool.Services.Capture.KeyCaptureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Key Capture"
        Width="400"
        Height="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Display -->
        <TextBlock Grid.Row="0" 
                   x:Name="TitleTextBlock"
                   Text="{Binding TitleText}"
                   FontSize="16" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"/>

        <!-- Description -->
        <TextBlock Grid.Row="2" 
                   Text="Focus on the textbox below and press your key combination."
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"
                   Foreground="DarkBlue"/>
        
        <TextBlock Grid.Row="3" 
                   Text="Example: Ctrl+Alt+F1, Shift+A, Escape etc."
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"
                   FontStyle="Italic"
                   Foreground="Gray"/>

        <!-- Key Input TextBox -->
        <Border Grid.Row="5" 
                BorderBrush="DodgerBlue" 
                BorderThickness="2" 
                CornerRadius="5">
            <TextBox x:Name="KeyTextBox"
                     Height="40"
                     FontSize="14"
                     FontWeight="Bold"
                     Text="{Binding CapturedKeyText, Mode=TwoWay}"
                     IsReadOnly="True"
                     Background="LightCyan"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     PreviewKeyDown="KeyTextBox_PreviewKeyDown"
                     PreviewKeyUp="KeyTextBox_PreviewKeyUp"/>
        </Border>

        <!-- Button Area -->
        <StackPanel Grid.Row="7" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <Button x:Name="OkButton" 
                    Content="OK" 
                    Width="80" 
                    Height="30" 
                    Margin="5"
                    IsDefault="True"
                    Click="OkButton_Click"/>
            <Button x:Name="ClearButton" 
                    Content="Clear" 
                    Width="80" 
                    Height="30" 
                    Margin="5"
                    Click="ClearButton_Click"/>
            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Width="80" 
                    Height="30" 
                    Margin="5"
                    IsCancel="True"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>