<Window x:Class="AutoTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoTool"
        xmlns:panels="clr-namespace:Panels.View;assembly=Panels"
        xmlns:converter="clr-namespace:Panels.View.Converter;assembly=Panels"
        xmlns:vm="MainW"
        mc:Ignorable="d"
        Title="AutoTool" Height="1000" Width="1000">

    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>

    <DockPanel LastChildFill="True">
        <panels:ButtonPanel DockPanel.Dock="Top" DataContext="{Binding ButtonPanelViewModel}" Margin="2"/>
        <!--
        <panels:RunningPanel DockPanel.Dock="Top" DataContext="{Binding RunningPanelViewModel}" Margin="2"/>
        -->
        <panels:LogPanel  DockPanel.Dock="Bottom" DataContext="{Binding LogPanelViewModel}" Height="100" Margin="2"/>
        <panels:EditPanel DockPanel.Dock="Bottom" DataContext="{Binding EditPanelViewModel}" Height="200" Margin="2"/>
        <panels:ListPanel DataContext="{Binding ListPanelViewModel}" Margin="2"/>
    </DockPanel>
</Window>
