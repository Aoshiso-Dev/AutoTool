<UserControl x:Class="AutoTool.View.MacroPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:panels="clr-namespace:MacroPanels.View;assembly=MacroPanels"
        mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ボタンパネル -->
        <panels:ButtonPanel Grid.Row="0" DataContext="{Binding ButtonPanelViewModel}" Margin="8"/>

        <!-- メインコンテンツ（上下分割） -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" MinHeight="200"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="200" MinHeight="100"/>
            </Grid.RowDefinitions>

            <!-- リストパネル -->
            <ui:Card Grid.Row="0" Margin="8,0,8,4" Padding="0" VerticalAlignment="Top">
                <panels:ListPanel DataContext="{Binding ListPanelViewModel}"/>
            </ui:Card>

        <TabControl DockPanel.Dock="Top" SelectedIndex="{Binding SelectedListTabIndex, Mode=TwoWay}" Height="250" HorizontalAlignment="Stretch">
            <TabItem Header="編集">
                <panels:EditPanel DataContext="{Binding EditPanelViewModel}" Margin="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </TabItem>
            <TabItem Header="ログ">
                <panels:LogPanel DataContext="{Binding LogPanelViewModel}" Margin="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </TabItem>
        </TabControl>

        <panels:ListPanel DataContext="{Binding ListPanelViewModel}" Margin="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </DockPanel>
</UserControl>
