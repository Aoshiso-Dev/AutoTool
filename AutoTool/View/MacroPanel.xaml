<UserControl x:Class="AutoTool.View.MacroPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoTool"
        xmlns:panels="clr-namespace:MacroPanels.View;assembly=MacroPanels"
        xmlns:converter="clr-namespace:MacroPanels.View.Converter;assembly=MacroPanels"
        xmlns:vm="MainW"
        mc:Ignorable="d">

    <DockPanel LastChildFill="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <panels:ButtonPanel DockPanel.Dock="Top" DataContext="{Binding ButtonPanelViewModel}" Margin="2" HorizontalAlignment="Stretch"/>

        <TabControl DockPanel.Dock="Top" SelectedIndex="{Binding SelectedListTabIndex, Mode=TwoWay}" Height="250" HorizontalAlignment="Stretch">
            <TabItem Header="編集">
                <panels:EditPanel DataContext="{Binding EditPanelViewModel}" Margin="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </TabItem>
            <TabItem Header="ログ">
                <panels:LogPanel DataContext="{Binding LogPanelViewModel}" Margin="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </TabItem>
        </TabControl>

        <panels:ListPanel DataContext="{Binding ListPanelViewModel}" Margin="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </DockPanel>
</UserControl>
