<UserControl x:Class="AutoTool.View.Panels.ButtonPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:AutoTool.View.Converters"
             mc:Ignorable="d"
             FontFamily="Segoe UI, Segoe UI Emoji, Segoe UI Symbol">
    
    <UserControl.Resources>
        <converters:InvertBooleanConverter x:Key="InvertBooleanConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>
    
    <!-- ButtonPanel Content -->
    <ToolBarTray>
        <ToolBar>
            <!-- File operations - disabled during execution -->
            <Button Content="Open" Command="{Binding LoadCommand}" ToolTip="Open File (Ctrl+O)" 
                    IsEnabled="{Binding IsRunning, Converter={StaticResource InvertBooleanConverter}}" />
            <Button Content="Save" Command="{Binding SaveCommand}" ToolTip="Save File (Ctrl+S)" 
                    IsEnabled="{Binding IsRunning, Converter={StaticResource InvertBooleanConverter}}" />
            <Separator />
            
            <!-- Undo/Redo - disabled during execution -->
            <Button Content="Undo" Command="{Binding UndoCommand}" ToolTip="Undo (Ctrl+Z)"
                    IsEnabled="{Binding IsRunning, Converter={StaticResource InvertBooleanConverter}}"/>
            <Button Content="Redo" Command="{Binding RedoCommand}" ToolTip="Redo (Ctrl+Y)"
                    IsEnabled="{Binding IsRunning, Converter={StaticResource InvertBooleanConverter}}"/>
            <Separator />
            
            <!-- Execution control - always enabled -->
            <Button Command="{Binding RunCommand}" Width="100" Margin="2" Foreground="White">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Green"/>
                        <Setter Property="Content" Value="Run"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                <Setter Property="Background" Value="Red"/>
                                <Setter Property="Content" Value="Stop"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Separator />
            
            <!-- Command selection and operations - disabled during execution -->
            <StackPanel Orientation="Horizontal" 
                        IsEnabled="{Binding IsRunning, Converter={StaticResource InvertBooleanConverter}}">
                <!-- Command Type Selection -->
                <ComboBox ItemsSource="{Binding FilteredItemTypes}" 
                          SelectedItem="{Binding SelectedItemType}" 
                          DisplayMemberPath="DisplayName"
                          VerticalContentAlignment="Center" 
                          Width="150" 
                          Margin="2"/>
                          
                <!-- Quick Add Button -->
                <Button Content="Add" Command="{Binding AddCommand}" 
                        Width="50" Height="Auto" Margin="2"/>
                        
                <!-- List manipulation buttons -->
                <Button Content="Delete" Command="{Binding DeleteCommand}" 
                        Width="50" Height="Auto" Margin="2"/>
                <Button Content="Up" Command="{Binding UpCommand}" 
                        Width="30" Margin="2" ToolTip="Move Up"/>
                <Button Content="Dn" Command="{Binding DownCommand}" 
                        Width="30" Margin="2" ToolTip="Move Down"/>
                <Button Content="Clear" Command="{Binding ClearCommand}" 
                        Width="50" Height="Auto" Margin="2"/>
            </StackPanel>
            <Separator />
            
            <!-- Debug test buttons - disabled during execution -->
            <StackPanel Orientation="Horizontal" 
                        IsEnabled="{Binding IsRunning, Converter={StaticResource InvertBooleanConverter}}">
                <Button Content="TEST" Command="{Binding TestAddMessageCommand}" 
                        Width="50" Height="Auto" Margin="2" 
                        Background="Orange" Foreground="White"
                        ToolTip="Test Add Command"/>
                <Button Content="Stats" Click="ShowStatsButton_Click"
                        Width="50" Height="Auto" Margin="2" 
                        Background="Purple" Foreground="White"
                        ToolTip="Show Command Statistics"/>
            </StackPanel>
        </ToolBar>
    </ToolBarTray>
</UserControl>